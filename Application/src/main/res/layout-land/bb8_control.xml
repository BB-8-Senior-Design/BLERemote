<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout"
    tools:context="ece.ece477.grp4.bb8_ble_remote.BluetoothLeService">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ImageButton"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rot_right"
        android:background="@android:color/holo_orange_dark"
        android:layout_above="@+id/hsv"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="33dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ImageButton3"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rot_left"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignTop="@+id/ImageButton"
        android:layout_toStartOf="@+id/ImageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Direction"
        android:id="@+id/textView"
        android:layout_below="@+id/device_address"
        android:layout_alignEnd="@+id/device_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device"
        android:id="@+id/device_address"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/batImage"
        android:src="@drawable/ic_battery"
        android:background="@color/switch_thumb_disabled_material_dark"
        android:layout_alignTop="@+id/batText"
        android:layout_toStartOf="@+id/batText" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100%"
        android:id="@+id/batText"
        android:background="@color/switch_thumb_disabled_material_dark"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/ImageButton3" />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:fillViewport="false"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/AnalogStick"
        android:layout_marginStart="39dp">

        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
            <ImageButton
                android:id="@+id/Astro1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_music_note"
                android:background="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/darker_gray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/darker_gray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/Astro8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_music_note"
                    android:background="@android:color/darker_gray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ece.ece477.grp4.bb8_ble_remote.AnalogStickView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/AnalogStick"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
